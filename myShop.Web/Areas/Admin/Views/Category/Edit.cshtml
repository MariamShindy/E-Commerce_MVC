@model Category
@{
	ViewBag.PageTitle = "Category Management";
	ViewBag.CardTitle = "Edit Category";
	Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<form method="post" asp-action="Edit">
	<input hidden asp-for="Id" />
	<div class="mb-3">
		<label asp-for="Name"></label>
		<input asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label asp-for="Description"></label>
		<textarea id="myTextArea" asp-for="Description" class="form-control"></textarea>
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<button type="submit" class="btn btn-success"> Edit </button>
		<a asp-action="Index" asp-controller="Category" class="btn btn-warning">Back To Index</a>
	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<script>
		tinymce.init({
			selector: '#myTextArea',
		});
	</script>
}