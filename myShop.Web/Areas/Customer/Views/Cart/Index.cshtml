@model ShoppingCartViewModel
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
    <form method="get" asp-action="Summary">
    <section class="h-100">
        <div class="container h-100 py-5">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-10">

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h3 class="fw-normal mb-0">Shopping Cart</h3>
                        <div>
                            <p class="mb-0">
                                <span class="text-muted">Sort by:</span> <a href="#!" class="text-body">
                                    price <i class="fas fa-angle-down mt-1"></i>
                                </a>
                            </p>
                        </div>
                    </div>
                    @foreach(var item in Model.CartsList)
				    {
                    <div class="card rounded-3 mb-4">
                        <div class="card-body p-4">
                            <div class="row d-flex justify-content-between align-items-center">
                                <div class="col-md-2 col-lg-2 col-xl-2">
                                            <img src="@item.Product.Img"
                                         class="img-fluid rounded-3" alt="Cotton T-shirt">
                                </div>
                                <div class="col-md-3 col-lg-3 col-xl-3">
                                            <p class="lead fw-normal mb-2">@Html.Raw(item.Product.Name)</p>
                                    <p><span class="text-muted">@Html.Raw(item.Product.Description)</span></p>
                                </div>
                                <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                            <div class="col-md-4 quantity">
                                                <label for="quantity">Quantity:</label>
                                                <div class="btn-group" role="group">
                                                    <a class="btn btn-success" asp-action="Plus" asp-route-cartid="@item.Id">
                                                        +
                                                    </a>
                                                    <span style="margin:5px;">
                                                        @item.Count
                                                    </span>
                                                    <a class="btn btn-danger" asp-action="Minus" asp-route-cartid="@item.Id">
                                                        -
                                                    </a>
                                                </div>
                                           </div>
                                </div>
                                <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                    <h5 class="mb-0">$@(item.Product.Price*item.Count)</h5>
                                </div>
                                 <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                            <a asp-action="Remove" asp-route-cartId="@item.Id" class="btn btn-danger">X</a>
                                 </div>
                                <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                    <a href="#!" class="text-danger"><i class="fas fa-trash fa-lg"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    }

                    <div class="card mb-4">
                        <div class="card-body p-4 d-flex flex-row">
                         <div>
                             <span class="text">Total</span>
                             <span class="price">$@Model.TotalCarts.ToString()</span>
                             </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-warning btn-block btn-lg">Proceed to Pay</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
    </form>
</body>
</html>
